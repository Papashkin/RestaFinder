<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/error"
    android:elevation="@dimen/general_elevation">

    <ImageView
        android:id="@+id/no_internet_iv"
        android:layout_width="@dimen/general_icon_size"
        android:layout_height="@dimen/general_icon_size"
        android:layout_marginHorizontal="@dimen/padding_medium"
        android:layout_marginVertical="@dimen/padding_small"
        android:src="@drawable/ic_no_internet"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/no_internet_tv"
        style="@style/TextAppearance.Body2.Bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_internet_connection"
        android:layout_marginStart="@dimen/padding_large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/no_internet_iv" />

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="@dimen/general_icon_size"
        android:layout_height="@dimen/general_icon_size"
        android:layout_marginHorizontal="@dimen/padding_medium"
        android:layout_marginVertical="@dimen/padding_small"
        android:src="@drawable/ic_close"
        app:tint="@color/white"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
